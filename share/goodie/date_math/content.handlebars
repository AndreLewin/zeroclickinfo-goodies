<div class="gw">
  {{#each date_components}}
    <form class="frm g third date--form">
        <div class="frm__select">
          <select class="js-set-input input--{{lc name}} date-input-box">
            {{#each entries}}
              <option value="{{value}}">{{display}}</option>
            {{/each}}
          </select>
        </div>
    </form>
  {{/each}}
    <form class="frm g third date--form">
      <input type="number" min="0" max="9999" value="2014" class="frm__input input--year date-input-box" />
    </form>
</div>
<div class="zci__caption">
  <span class="date--start">
    <span class="date--start-date">{{subtitle}}</span>
    <span class="date--start-modifiers"></span>
  </span>
    <br />
  <span class="date--result">{{title}}</span>
</div>
<span class="template--op gw hide">
  <form class="frm date--form">
    <label class="input--op-op btn ddgsi-plus frm__label g ten" />
    <input type="number" value="1" min="0" class="input--op-amt js-set-input frm__input g forty" />
    <select class="js-set-input input--op-type g fifty">
      {{#each modifiers}}
        <option value="{{value}}">{{display}}</option>
      {{/each}}
    </select>
  </form>
</span>
<span class="op--container">
</span>
<span class="op--add btn ddgsi-plus" />
